@model Proiect_Goldan_Maria_Valentina.Models.Concert

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Concert</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Artist)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Artist.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2"> 
            @Html.DisplayNameFor(model => model.Purchases) 
        </dt>
        <dd class="col-sm-10"> 
            <table class="table"> 
                <tr> 
                    <th>Customer</th> 
                    <th>Purchase Date</th> 
                </tr> 
                @foreach (var item in Model.Purchases)
                {
                    <tr> 
                        <td> @Html.DisplayFor(modelItem => item.Customer.Name) </td> 
                        <td> @Html.DisplayFor(modelItem => item.PurchaseDate) </td> 
                    </tr>
                } 
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
